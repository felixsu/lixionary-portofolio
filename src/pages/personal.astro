---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Personal Information';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pageTitle} />
	</head>
	<body>
		<Header />
		<main>
			<h1>{pageTitle}</h1>
			<section>
				<h2>Hobbies</h2>
				<p>Tell me about your hobbies here.</p>
			</section>
			<section>
				<h2>Side Projects</h2>
				<p>Describe your side projects here.</p>
			</section>
			<section>
				<h2>Equipment</h2>
				<p>List the equipment you use here.</p>
			</section>
		</main>
		<Footer />
	</body>
</html>